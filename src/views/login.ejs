<%- include("partials/head.ejs") %>

    <main class="login-container">
        <section class="login-card">
            <h1>
                <%= about %>
            </h1>


            <form action="/login" method="POST" id="login-form" class="products-form-amplio">

                <label for="email">Correo electrónico</label>
                <input type="email" name="email" id="email" required placeholder="admin@mates.com">
                <br>

                <label for="password">Contraseña</label>

                <input type="password" name="password" id="password" required placeholder="••••••••">
                <br>

                <input type="submit" value="Ingresar">

            </form>

            <hr>

            <form id="quick-login-form" class="products-form-amplio">

                <label for="quickLogin">Acceso rapido (Para testing)</label>

                <input type="button" id="quickLogin" value="Acceso Rápido">

            </form>

            <% if (typeof error !=="undefined" ) { %>
                <div class="mensaje-error">
                    <%= error %>
                </div>
                <% } %>

        </section>
    </main>

    <script type="module" src="/js/login.js"></script>

    <%- include("partials/footer.ejs") %>