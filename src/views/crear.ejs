<%- include("partials/head.ejs") %>
<%- include("partials/nav.ejs") %>

<main>
    <h1> <%= about %> </h1>

    <form id="altaProducts-form" class="products-form-amplio">

        <label for="nameProd">Nombre</label>
        <input type="text" name="nombre_producto" id="nameProd" required>
        <br>

        <label for="priceProd">Precio</label>
        <input type="number" name="precio_producto" id="priceProd" required>
        <br>

        <label for="categoryProd">Categoria</label>
        <select name="tipo_producto" id="categoryProd" required>
            <option value="mate">mate</option>
            <option value="termo">termo</option>
        </select>
        <br>

        <label for="imageProd">Imagen</label>
        <input type="text" name="img_producto" id="imageProd" required>
        <br>

        <input type="submit" value="Crear producto">
    </form>

    <hr>
    <div id="contenedor-productos"></div>
</main>

<script type="module" src="js/crear.js"></script>

<%- include("partials/footer.ejs") %>